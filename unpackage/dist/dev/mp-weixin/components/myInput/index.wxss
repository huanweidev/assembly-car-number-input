.myInput {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 10;
  background: #fff;
  border-top: 2rpx solid #EEEEEE;
}
.myInput .header {
  height: 68rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
}
.myInput .header .close {
  font-size: 28rpx;
  font-weight: 500;
  color: #009D7A;
  padding-right: 31rpx;
}
.myInput .content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  background: #cfd4db;
}
.myInput .content .items {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.myInput .content .items .item {
  padding: 20rpx 10rpx;
  padding: 26rpx 16rpx;
  padding: 26rpx 0;
  padding: 22rpx 0;
  background: #fff;
  border-radius: 10rpx;
  margin: 10rpx 4rpx;
  width: calc(100vw / 10 - 10rpx);
  text-align: center;
}
.myInput .content .items .item.dis {
  color: #cfd4db;
}
.myInput .content .items .item.mt2 {
  padding-left: 12rpx;
  padding-right: 12rpx;
}
.myInput .content .extra {
  position: absolute;
  background: rgba(0, 0, 0, 0.6);
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  right: 4rpx;
  bottom: 196rpx;
}
.myInput .content .removeKey {
  position: absolute;
  bottom: 10rpx;
  right: 2rpx;
  height: 86rpx;
  border-radius: 10rpx;
  width: 106rpx;
  background: #a8b0bd;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.myInput .content .removeKey ._img {
  width: 67rpx;
  height: 40rpx;
}

